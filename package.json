{
  "name": "nebular-news",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node scripts/patch-cloudflare-worker.mjs",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:pull": "playwright test e2e/manual-pull-status.spec.ts",
    "hash-password": "node scripts/hash-password.mjs",
    "sync:gh-secrets": "bash scripts/sync-gh-secrets.sh",
    "migrate:staging": "wrangler d1 execute nebularnews-staging --remote --env staging --file=./schema.sql",
    "migrate:prod": "wrangler d1 execute nebularnews-prod --remote --env production --file=./schema.sql",
    "deploy:staging": "npm run build && wrangler deploy --env staging",
    "deploy:prod": "npm run build && wrangler deploy --env production"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@mozilla/readability": "0.5.0",
    "@sveltejs/adapter-cloudflare": "7.2.6",
    "@sveltejs/kit": "2.12.2",
    "@tabler/icons-svelte": "^3.36.1",
    "cookie": "0.6.0",
    "fast-xml-parser": "4.4.1",
    "linkedom": "0.16.11",
    "nanoid": "5.0.7",
    "svelte": "5.2.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20260207.0",
    "@playwright/test": "^1.58.2",
    "@sveltejs/vite-plugin-svelte": "4.0.3",
    "@testing-library/svelte": "^5.3.1",
    "@types/cookie": "0.6.0",
    "jsdom": "^28.0.0",
    "svelte-check": "3.8.6",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vitest": "2.1.2",
    "wrangler": "^4.63.0"
  }
}
